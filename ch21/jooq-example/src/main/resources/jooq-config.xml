<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration>

    <jdbc>
        <driver>org.sqlite.JDBC</driver>
        <url>jdbc:sqlite:src/main/resources/ch21.db</url>
        <user/>
        <password/>
    </jdbc>

    <generator>
        <name>org.jooq.codegen.JavaGenerator</name>

        <database>
            <name>org.jooq.meta.sqlite.SQLiteDatabase</name>
            <!-- <inputSchema>ch21</inputSchema> -->
            <includes>.*</includes>
            <excludes/>
        </database>

        <target>
            <packageName>jooqexample.infrastructure.jooq</packageName>
            <directory>src/main/java/</directory>
        </target>
    </generator>
</configuration>